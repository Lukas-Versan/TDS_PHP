                            $media = ($nota1 + $nota2 + $nota3)/3;
                            if($media >= 7 && $media <= 10){
                                echo"Média: $media </br>Você está</br><b>APROVADO</b>";
                            }
                            else if($media >= 0 && $media < 7){
                                echo"Média: $media </br>Você está</br><b>REPROVADO</b>";
                            }
                            else{
                                ?><div class="alert alert-danger"><b>ERRO! NÃO FOI POSSÍVEL CALCULAR A MÉDIA!</b></div><?php
                            }
                        ?>
