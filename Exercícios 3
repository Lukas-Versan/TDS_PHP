    <?php
        $numeros = array(2, 4, 6, 8, 10);
        $i = 0;
        foreach($numeros as $num){
            $i = $i + $num;
        }
    ?>
    <body>
        <br/>
        <div class="row justify-content-center row-cols-1 row-cols-md-2 mb-3 text-center">
            <div class="col">
                <div class="card mb-4 rounded-3 shadow-sw">
